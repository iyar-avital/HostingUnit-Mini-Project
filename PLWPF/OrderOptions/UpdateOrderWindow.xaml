<Window x:Class="PLWPF.OrderOptions.UpdateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.OrderOptions"
        mc:Ignorable="d"
        Title="UpdateOrderWindow" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Order update reason:" HorizontalAlignment="Left" Margin="42,32,0,0" VerticalAlignment="Top" Height="42" Width="265"/>
        <RadioButton Name="CostumerRespond_button" Content="Closed_from_customer_not_respone" HorizontalAlignment="Left" Margin="116,79,0,0" VerticalAlignment="Top" Checked="CostumerRespond_button_Checked"/>
        <RadioButton Name="CostumerNotRespond_button" Content="Closed_on_customer_response" HorizontalAlignment="Left" Margin="116,99,0,0" VerticalAlignment="Top" Checked="CostumerNotRespond_button_Checked"/>
        <Button Name="Update_button" Content="Update" Visibility="Hidden" HorizontalAlignment="Left" Margin="167,139,0,0" VerticalAlignment="Top" Width="75" Click="Update_button_Click"/>
    </Grid>
</Window>
